<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="AppButton">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
        <item name="textAllCaps">true</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/common_textsize_medium</item>
        <item name="android:minWidth">@dimen/common_button_minwidth</item>
        <item name="android:padding">@dimen/common_button_padding</item>
        <item name="android:layout_marginTop">@dimen/common_space_small</item>
        <item name="android:layout_marginStart">@dimen/common_space_small</item>
        <item name="android:layout_marginEnd">@dimen/common_space_small</item>
        <item name="android:layout_marginLeft">@dimen/common_space_small</item>
        <item name="android:layout_marginRight">@dimen/common_space_small</item>
        <item name="android:layout_marginBottom">@dimen/common_button_layout_margin_bottom</item><!-- we need quite a bit of space below the button to not cut off the shadow -->
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="AppButtonPositive" parent="AppButton">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/button_positive_selector</item>
    </style>

    <style name="AppButtonNegative" parent="AppButton">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/button_negative_selector</item>
    </style>

</resources>
